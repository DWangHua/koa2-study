extends base
block main
    mixin course(title, desc, link)
        div.col-md-4
            div(class='panel panel-default')
                div.panel-heading
                    h3.panel-title #{title}
                div.panel-body
                    p #{desc}
                    p 
                        a(target='_blank', href=link) Read more
        
    
    div.container
        div.row
            div.col-md-6
                div(class='panel panel-default')
                    div.panel-heading
                        h3.panel-title
                            span(class='glyphicon glyphicon-user') 
                            |#{' Please sign in'}
                    div.panel-body
                        form&attributes({
                            action: '/signin',
                            method: 'post'
                        })
                            div.form-group
                                label Email address
                                input.form-control(type='email', name='email', placeholder='Email')
                                p.help-block Use email: admin@example.com
                            div.form-group
                                label Password
                                input.form-control(type='password', name='password', placeholder='Password')
                            button(class='btn btn-primary', type='submit') Submit
            div.col-md-6
                div(class='panel panel-default')
                    div.panel-heading
                        h3.panel-title
                            span(class='glyphicon glyphicon-hd-video')
                            |#{' Video training'}
                    div.panel-body
                        video(width='100%', controls='controls')
                            source(src='https://github.com/michaelliao/learn-javascript/raw/master/video/vscode-nodejs.mp4')
        div.row
            div.col-md-12
                h1 Get more courses...
        div.row
            +course('Javascript', 'full-stack Javascript course', 'http://www.liaoxuefeng.com/wiki/001434446689867b27157e896e74d51a89c25cc8b43bdb3000')
            +course('Python', 'latest Python course', 'http://www.liaoxuefeng.com/wiki/0014316089557264a6b348958f449949df42a6d3a2e542c000')
            +course('git', 'A course about git version control', 'http://www.liaoxuefeng.com/wiki/0013739516305929606dd18361248578c67b8067c8c017b000')

